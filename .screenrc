# set encoding to utf-8
defutf8 on
defencoding UTF-8
encoding UTF-8

# set prefix to Ctrl-z
escape ^z^z

# disable lockscreen
bind x
bind ^x

startup_message off
autodetach on
vbell off

# set scrollback limit
defscrollback 2000

# display message for 5 seconds
msgwait 5

# status format
caption always "%-w%10L>%{=b bw}%n %t%{-}%+w%-0="
hardstatus alwayslastline "%H%=%Y/%m/%d %02c"
shelltitle "$ |shell"
